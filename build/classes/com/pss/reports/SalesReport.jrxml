<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
    http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="SalesReport"
    pageWidth="595" pageHeight="842"
    columnWidth="555"
    leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">

    <!-- PARAMETERS -->
    <parameter name="FILTER_CONDITION" class="java.lang.String"/>
    <parameter name="REPORT_TITLE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
        SELECT order_id,
               order_date,
               customer_id,
               total_amount
        FROM orders
        WHERE 1=1
        $P!{FILTER_CONDITION}
        ORDER BY order_date DESC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="order_id" class="java.lang.Integer"/>
    <field name="order_date" class="java.sql.Timestamp"/>
    <field name="customer_id" class="java.lang.Integer"/>
    <field name="total_amount" class="java.lang.Double"/>

    <!-- VARIABLE -->
    <variable name="GrandTotalSales" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$F{total_amount}]]></variableExpression>
    </variable>

  <!-- TITLE -->
<title>
    <band height="120">

        <!-- Blue Header Background -->
        <rectangle>
            <reportElement x="0" y="0" width="555" height="80" backcolor="#2E86C1"/>
            <graphicElement>
                <pen lineWidth="0.0"/>
            </graphicElement>
        </rectangle>

        <!-- Pharmacy Name -->
        <staticText>
            <reportElement x="0" y="15" width="555" height="30"/>
            <textElement textAlignment="Center">
                <font size="26" isBold="true"/>
            </textElement>
            <text><![CDATA[HEALTHCARE PLUS PHARMACY]]></text>
        </staticText>

        <!-- Tagline -->
        <staticText>
            <reportElement x="0" y="45" width="555" height="20"/>
            <textElement textAlignment="Center">
                <font size="13" isItalic="true"/>
            </textElement>
            <text><![CDATA[Your Trusted Partner in Health & Wellness]]></text>
        </staticText>

        <!-- Sales Report Title -->
        <staticText>
            <reportElement x="0" y="90" width="555" height="20"/>
            <textElement textAlignment="Center">
                <font size="16" isBold="true"/>
            </textElement>
            <text><![CDATA[SALES REPORT]]></text>
        </staticText>

        <!-- Line Separator -->
        <line>
            <reportElement x="0" y="110" width="555" height="1"/>
        </line>

    </band>
</title>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="30">

            <staticText>
                <reportElement x="20" y="5" width="80" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Order ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="120" y="5" width="160" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Order Date]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="5" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Customer ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="420" y="5" width="120" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Total Amount]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="28" width="555" height="1"/>
            </line>

        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="25">

            <textField>
                <reportElement x="20" y="5" width="80" height="20"/>
                <textFieldExpression><![CDATA[$F{order_id}]]></textFieldExpression>
            </textField>

            <textField pattern="yyyy-MM-dd HH:mm">
                <reportElement x="120" y="5" width="160" height="20"/>
                <textFieldExpression><![CDATA[$F{order_date}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="300" y="5" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{customer_id}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="420" y="5" width="120" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{total_amount}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="23" width="555" height="1"/>
            </line>

        </band>
    </detail>
    <!-- PAGE FOOTER -->
    <pageFooter>
        <band height="30">

            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="10" width="300" height="20"/>
                <text><![CDATA[Generated by ABC Pharmacy System]]></text>
            </staticText>

            <textField pattern="Page {0}">
                <reportElement x="450" y="10" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <!-- SUMMARY -->
    <summary>
        <band height="60">

            <line>
                <reportElement x="0" y="5" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="300" y="20" width="120" height="25"/>
                <textElement>
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[GRAND TOTAL]]></text>
            </staticText>

            <textField pattern="#,##0.00">
                <reportElement x="420" y="20" width="120" height="25"/>
                <textElement textAlignment="Right">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{GrandTotalSales}]]></textFieldExpression>
            </textField>

        </band>
    </summary>


</jasperReport>