<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
    http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="invoice_receipt" 
    pageWidth="300" pageHeight="842"
    columnWidth="260"
    leftMargin="20" rightMargin="20"
    topMargin="20" bottomMargin="20">

    <!-- PARAMETER -->
    <parameter name="ORDER_ID" class="java.lang.Integer"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
        SELECT o.order_id,
               o.order_date,
               o.total_amount,
               p.name AS product_name,
               p.price,
               od.quantity,
               od.subtotal
        FROM orders o
        JOIN order_details od ON o.order_id = od.order_id
        JOIN products p ON p.id = od.product_id
        WHERE o.order_id = $P{ORDER_ID}
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="order_id" class="java.lang.Integer"/>
    <field name="order_date" class="java.sql.Timestamp"/>
    <field name="total_amount" class="java.lang.Double"/>
    <field name="product_name" class="java.lang.String"/>
    <field name="price" class="java.lang.Double"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="subtotal" class="java.lang.Double"/>

    <!-- TITLE -->
    <title>
        <band height="100">

            <staticText>
                <reportElement x="0" y="0" width="260" height="25"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[PHARMACY]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="25" width="260" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Colombo, Sri Lanka]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="45" width="260" height="15"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Tel: 011-1234567]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="65" width="260" height="15"/>
                <textFieldExpression><![CDATA["Invoice No: " + $F{order_id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="80" width="260" height="15"/>
                <textFieldExpression><![CDATA["Date: " + $F{order_date}]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="30">

            <staticText>
                <reportElement x="0" y="0" width="260" height="10"/>
                <text><![CDATA[------------------------------------------]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="12" width="120" height="15"/>
                <text><![CDATA[Item]]></text>
            </staticText>

            <staticText>
                <reportElement x="130" y="12" width="40" height="15"/>
                <text><![CDATA[Qty]]></text>
            </staticText>

            <staticText>
                <reportElement x="180" y="12" width="80" height="15"/>
                <text><![CDATA[Amount]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="120" height="15"/>
                <textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="130" y="0" width="40" height="15"/>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="180" y="0" width="80" height="15"/>
                <textFieldExpression><![CDATA[$F{subtotal}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- SUMMARY -->
    <summary>
        <band height="80">

            <staticText>
                <reportElement x="0" y="0" width="260" height="10"/>
                <text><![CDATA[------------------------------------------]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="20" width="120" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL]]></text>
            </staticText>

            <textField pattern="#,##0.00">
                <reportElement x="150" y="20" width="110" height="20"/>
                <textElement textAlignment="Right">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{total_amount}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="0" y="50" width="260" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[Thank You! Visit Again]]></text>
            </staticText>

        </band>
    </summary>

</jasperReport>